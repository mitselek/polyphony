{
	"name": "registry",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"deploy": "vite build && wrangler pages deploy .svelte-kit/cloudflare",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:unit": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@polyphony/shared": "workspace:*",
		"nanoid": "^5.1.6"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260124.0",
		"@sveltejs/adapter-cloudflare": "^6.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^25.0.10",
		"jose": "^6.1.3",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^3.0.0",
		"wrangler": "^4.61.1"
	}
}
