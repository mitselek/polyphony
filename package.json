{
  "name": "polyphony",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter registry dev",
    "build": "pnpm --filter registry build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "check": "pnpm -r check",
    "validate": "pnpm check && pnpm test",
    "precommit": "pnpm validate",
    "complexity": "./.github/scripts/check-complexity.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint-plugin-complexity": "^1.0.2",
    "ts-complex": "^1.0.0",
    "typescript": "^5.7.0",
    "wrangler": "^4.60.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "vite": "^7.3.1",
      "@types/node": "^22.19.7"
    }
  }
